  intrahash = {ecfde988253634416faf24914834e3ea},
  journal = {Evolution},
  keywords = {barton bombina cline_fitting clines hybrid_zone},
  number = 6,
  pages = {1141--1159},
  publisher = {Society for the Study of Evolution},
  timestamp = {2025-08-22T21:13:56.000+0200},
  title = {Genetic Analysis of a Hybrid Zone Between the Fire-Bellied Toads, Bombina bombina and B. variegata, Near Cracow in Southern Poland},
