  interhash = {d3e4355871047b2362ea18bcd06beb61},
  intrahash = {b6f6633d5c2e4d39507ce4cf12e70122},
  journal = {Theor Popul Biol},
  keywords = {barton central_limit_theorem fitness infinitesimal_model pedigree population_genetics quantitative_genetics},
  month = dec,
